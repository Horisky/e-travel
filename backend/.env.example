# Server
ENV=local
HOST=0.0.0.0
PORT=8000

# LLM
LLM_PROVIDER=openai
LLM_API_KEY=
# OpenAI: https://api.openai.com/v1
# GitHub Models: https://models.github.ai/inference
# VectorEngine: https://api.vectorengine.ai/v1
LLM_API_BASE=https://models.github.ai/inference
# OpenAI example: gpt-4o-mini
# GitHub Models example: openai/gpt-4.1
# VectorEngine Gemini example: gemini-1.5-pro
LLM_MODEL=openai/gpt-4.1
LLM_RESPONSE_FORMAT=json_object
LLM_TIMEOUT_SECONDS=60
LLM_MAX_RETRIES=2
AGENT_AUDIT_LOG=false
LLM_USAGE_LOG=false
ENABLE_BUDGET_RISK=false

# Email (Resend)
RESEND_API_KEY=
EMAIL_FROM=E-Travel <no-reply@yourdomain.com>
SEND_CODE_IN_RESPONSE=true

# Database
DATABASE_URL=

# Auth
JWT_SECRET=
JWT_EXPIRE_MINUTES=10080
SEND_CODE_IN_RESPONSE=true


